<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里显示坐标信息"/>
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="请输入查找内容"/>
        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>
    </LinearLayout>
    <com.github.barteksc.pdfviewer.PDFView
    android:id="@+id/pdfView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"/>
</LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="4dp"
        fab:fab_addButtonStrokeVisible="false"
        fab:fab_labelsPosition="left"
        >
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="测量"
            android:tooltipText="测量"
            android:src="@drawable/ic_straighten"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/lochere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="定位"
            fab:fab_title="定位"
            android:src="@drawable/ic_location_searching"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/restorezoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="重置"
            fab:fab_title="重置"
            android:src="@drawable/ic_autorenew"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>
