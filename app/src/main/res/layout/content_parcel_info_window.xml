<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.geopdfviewer.android.ParcelInfoWindow"
    tools:showIn="@layout/activity_parcel_info_window">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="499dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/AffiliationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属地"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="196dp" />

            <EditText
                android:id="@+id/VillageCommitteeTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textImeMultiLine"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="280dp" />

            <TextView
                android:id="@+id/VillageCommitteeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="村委会"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="261dp" />

            <EditText
                android:id="@+id/AffiliationTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textPersonName"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="215dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
